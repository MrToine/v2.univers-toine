                <div class="column is-four-fifths container-perso">
                    {% block breadcrumbs %}
                        {% include "/fantasy/partials/_breadcrumbs.html.twig" %}
                    {% endblock %}                    
                    {% block body %}{% endblock %}
                </div>
            </div>
